<!DOCTYPE html>
<html>
<head>
  {% include '/partials/template/head.html.twig' %}
</head>

<body>

  {% include '/partials/content/navbar.html.twig' %}


  {% if blends is not empty %}
    <h1>Blends</h1>

    <ul>
      {% for blend in blends %}
        <li>
          <a href="/blend/{{ blend.getId }}">{{ blend.getBlend }}</a>
          {% for brand in brands %}
            {% if brand.getId == blend.getBrandId %}
              (<a href="/brand/{{ brand.getId }}">{{ brand.getBrand }}</a>)
            {% endif %}
          {% endfor %}
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <h1>No blends found.</h1>
  {% endif %}

  {% include '/partials/template/footer.html.twig' %}

</body>
</html>
